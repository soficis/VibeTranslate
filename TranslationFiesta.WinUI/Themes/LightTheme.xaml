<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- Fluent-inspired light colors -->
  <Color x:Key="PrimaryColor">#0078D4</Color>
  <Color x:Key="BackgroundColor">#FFFFFFFF</Color>
  <Color x:Key="CardColor">#FFF5F5F5</Color>
  <Color x:Key="TextColor">#FF000000</Color>
  <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
  <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
  <SolidColorBrush x:Key="CardBrush" Color="{StaticResource CardColor}" />
  <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}" />
</ResourceDictionary>
