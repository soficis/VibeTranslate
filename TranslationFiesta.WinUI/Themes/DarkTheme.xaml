<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- Fluent-inspired dark colors -->
  <Color x:Key="PrimaryColor">#0A84FF</Color>
  <Color x:Key="BackgroundColor">#FF0F0F0F</Color>
  <Color x:Key="CardColor">#FF1E1E1E</Color>
  <Color x:Key="TextColor">#FFFFFFFF</Color>
  <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
  <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
  <SolidColorBrush x:Key="CardBrush" Color="{StaticResource CardColor}" />
  <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}" />
</ResourceDictionary>
