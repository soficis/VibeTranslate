<Window
    x:Class="TranslationFiesta.WinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    Title="Translation Fiesta" Height="720" Width="960">

    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="320" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="12" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Stretch">
            <TextBlock Text="Source:" VerticalAlignment="Center" Margin="0,0,8,0" />
            <ComboBox x:Name="CmbSource" Width="160" Margin="0,0,12,0" />
            <TextBlock Text="Target:" VerticalAlignment="Center" Margin="0,0,8,0" />
            <ComboBox x:Name="CmbTarget" Width="160" />
            <ToggleSwitch x:Name="TglAutoDetect" Header="Auto-detect" IsOn="True" Margin="12,0,0,0" />
        </StackPanel>

    <TextBox x:Name="TxtInput" Grid.Row="1" Grid.Column="0" Margin="12" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" FontSize="15" Background="{StaticResource CardBrush}" Foreground="{StaticResource TextBrush}" />

    <StackPanel Grid.Row="1" Grid.Column="1" Margin="12" Background="{StaticResource CardBrush}">
            <ToggleSwitch x:Name="TglEndpoint" Header="Use official API" Margin="0,0,0,8" />
            <TextBox x:Name="TxtApiKey" Header="API Key (optional)" Margin="0,0,0,12" />
            <Button x:Name="BtnBacktranslate" Content="Backtranslate" Margin="0,0,0,8" />
            <Button x:Name="BtnCopy" Content="Copy Result (Ctrl+C)" Margin="0,0,0,8" />
            <Button x:Name="BtnSave" Content="Save Result (Ctrl+S)" Margin="0,0,0,8" />
            <ToggleSwitch x:Name="TglTheme" Header="Dark Mode" Margin="0,12,0,0" />
            <ProgressRing x:Name="PrgSpinner" IsActive="False" Width="48" Height="48" HorizontalAlignment="Center" Margin="0,16,0,0" />
        </StackPanel>

    <TextBlock Text="Translated:" Grid.Row="2" Grid.Column="0" Margin="12,0,0,8" FontWeight="Bold" Foreground="{StaticResource TextBrush}" />
    <TextBox x:Name="TxtResult" Grid.Row="2" Grid.Column="0" Margin="12,24,12,12" AcceptsReturn="True" Height="160" IsReadOnly="True" TextWrapping="Wrap" Background="{StaticResource CardBrush}" Foreground="{StaticResource TextBrush}" />

    </Grid>
</Window>
