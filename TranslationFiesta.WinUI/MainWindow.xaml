<Window
    x:Class="TranslationFiesta.WinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:TranslationFiesta.WinUI"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    Title="TranslationFiesta">


    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <MenuBar Grid.Row="0" Margin="0,0,0,10">
            <MenuBarItem Title="Help">
                <MenuFlyoutSubItem Text="Help">
                    <MenuFlyoutItem x:Name="KeyboardShortcutsMenuItem" Text="Keyboard Shortcuts" />
                </MenuFlyoutSubItem>
            </MenuBarItem>
        </MenuBar>

        <!-- Header -->
        <TextBlock Text="TranslationFiesta"
                  Grid.Row="1"
                  FontSize="24"
                  FontWeight="Bold"
                  Margin="0,0,0,20" />

        <!-- Content -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
            <!-- Language Selection -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <ComboBox x:Name="SourceLanguageCombo" Width="120" Margin="0,0,10,0" />
                <Button x:Name="SwapLanguagesButton" Content="â‡„" Margin="0,0,10,0" ToolTipService.ToolTip="Swap Languages (Ctrl+L)" />
                <ComboBox x:Name="TargetLanguageCombo" Width="120" />
            </StackPanel>

            <!-- Character Count -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock x:Name="SourceCharCount" Text="Source: 0 chars" Margin="0,0,20,0" />
                <TextBlock x:Name="TargetCharCount" Text="Target: 0 chars" />
            </StackPanel>

            <!-- Cost Tracking Section -->
            <Border BorderBrush="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Margin="0,0,0,10"
                    Padding="10">
                <StackPanel>
                    <TextBlock Text="Cost Tracking" FontWeight="SemiBold" Margin="0,0,0,8" />

                    <!-- Current Month Stats -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock x:Name="MonthlyCostText" Text="This Month: $0.00" Margin="0,0,15,0" />
                        <TextBlock x:Name="MonthlyCharText" Text="Chars: 0" />
                    </StackPanel>

                    <!-- Budget Status -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock x:Name="BudgetStatusText" Text="Budget: $50.00 remaining" />
                    </StackPanel>

                    <!-- Cost per Translation -->
                    <TextBlock x:Name="CostPerTranslationText" Text="Avg Cost: $0.00" FontSize="12" Opacity="0.7" />
                </StackPanel>
            </Border>

             <!-- Source Text -->
             <Grid Margin="0,0,0,10">
                 <Grid.ColumnDefinitions>
                     <ColumnDefinition Width="*" />
                     <ColumnDefinition Width="Auto" />
                 </Grid.ColumnDefinitions>
                 <TextBox x:Name="SourceTextBox"
                         Grid.Column="0"
                         MinHeight="150"
                         MaxHeight="400"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         PlaceholderText="Enter text to translate..."
                         Margin="0,0,10,0"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Stretch" />
                 <Button x:Name="SourceCopyButton" 
                        Grid.Column="1"
                        Content="ðŸ“‹" 
                        Width="50" 
                        Height="50"
                        ToolTipService.ToolTip="Copy Source Text (Ctrl+Shift+C)"
                        VerticalAlignment="Top" />
             </Grid>

            <!-- Translate Button -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <Button x:Name="TranslateButton" Content="Translate" Margin="0,0,10,0" ToolTipService.ToolTip="Translate (Ctrl+Enter)" />
                <Button x:Name="BatchButton" Content="Batch Process" />
            </StackPanel>

             <!-- Target Text -->
             <Grid Margin="0,0,0,10">
                 <Grid.ColumnDefinitions>
                     <ColumnDefinition Width="*" />
                     <ColumnDefinition Width="Auto" />
                 </Grid.ColumnDefinitions>
                 <TextBox x:Name="TargetTextBox"
                         Grid.Column="0"
                         MinHeight="150"
                         MaxHeight="400"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         IsReadOnly="True"
                         PlaceholderText="Translation will appear here..."
                         Margin="0,0,10,0"
                         HorizontalAlignment="Stretch"
                         VerticalAlignment="Stretch" />
                 <StackPanel Grid.Column="1" VerticalAlignment="Top">
                     <Button x:Name="TargetCopyButton" 
                            Content="ðŸ“‹" 
                            Width="50" 
                            Height="50"
                            Margin="0,0,0,5" 
                            ToolTipService.ToolTip="Copy Target Text (Ctrl+C)" />
                     <Button x:Name="TargetSpeakButton" 
                            Content="ðŸ”Š" 
                            Width="50" 
                            Height="50"
                            ToolTipService.ToolTip="Speak Target Text (Ctrl+S)" />
                 </StackPanel>
             </Grid>

            <!-- Preview Pane -->
            <Border BorderBrush="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Margin="0,10,0,10"
                    Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" MinHeight="150" MaxHeight="400" />
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Preview"
                              FontWeight="SemiBold"
                              FontSize="14"
                              Margin="0,0,0,10" />
                    
                    <WebView2 x:Name="PreviewWebView" 
                             Grid.Row="1"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Stretch" />
                </Grid>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <Button x:Name="ImportButton" Content="Import" Margin="0,0,10,0" ToolTipService.ToolTip="Import Text (Ctrl+O)" />
                <SplitButton x:Name="ExportButton" Content="Export" Margin="0,0,10,0" ToolTipService.ToolTip="Export Text (Ctrl+E)">
                    <SplitButton.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem x:Name="ExportPdfMenuItem" Text="Export as PDF" />
                            <MenuFlyoutItem x:Name="ExportDocxMenuItem" Text="Export as DOCX" />
                            <MenuFlyoutItem x:Name="ExportTxtMenuItem" Text="Export as Text" />
                        </MenuFlyout>
                    </SplitButton.Flyout>
                </SplitButton>
                <Button x:Name="ClearButton" Content="Clear" ToolTipService.ToolTip="Clear Text (Ctrl+D)" Margin="0,0,10,0" />
                <ComboBox x:Name="TemplateComboBox" Width="150" PlaceholderText="Select a template..." Margin="0,0,10,0"/>
                <Button x:Name="ManageTemplatesButton" Content="Manage Templates" />
                <ComboBox x:Name="FormatComboBox" Width="120" Margin="10,0,0,0" />
            </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
