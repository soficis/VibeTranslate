<Window
    x:Class="TranslationFiesta.WinUI.TemplateEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Template Editor" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Template Name:"/>
            <TextBox x:Name="TemplateNameTextBox" Margin="0,5,0,0"/>
            <TextBlock Text="Description:" Margin="0,10,0,0"/>
            <TextBox x:Name="TemplateDescriptionTextBox" Margin="0,5,0,0"/>
        </StackPanel>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel>
                <TextBlock Text="Template Content:"/>
                <TextBox x:Name="TemplateContentTextBox" AcceptsReturn="True" TextWrapping="Wrap" Height="200" Margin="0,5,0,0" TextChanged="TemplateContentTextBox_TextChanged"/>
                <TextBlock Text="Variables:" Margin="0,10,0,5"/>
                <StackPanel Orientation="Horizontal">
                    <Button Content="{}{original}" Click="VariableButton_Click" Margin="0,0,5,0"/>
                    <Button Content="{}{translation}" Click="VariableButton_Click" Margin="0,0,5,0"/>
                    <Button Content="{}{source_lang}" Click="VariableButton_Click" Margin="0,0,5,0"/>
                    <Button Content="{}{target_lang}" Click="VariableButton_Click" Margin="0,0,5,0"/>
                    <Button Content="{}{date}" Click="VariableButton_Click" Margin="0,0,5,0"/>
                    <Button Content="{}{bleu_score}" Click="VariableButton_Click" Margin="0,0,5,0"/>
                    <Button Content="{}{quality_rating}" Click="VariableButton_Click" Margin="0,0,5,0"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                <TextBlock Text="Live Preview:"/>
                <Border BorderBrush="Gray" BorderThickness="1" Height="250" Margin="0,5,0,0">
                    <TextBlock x:Name="PreviewTextBlock" TextWrapping="Wrap" Margin="5"/>
                </Border>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="SaveButton" Content="Save" Click="SaveButton_Click"/>
            <Button x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>